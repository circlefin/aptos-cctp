{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2021",
    "moduleResolution": "node",
    "composite": true,
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "outDir": "dist",
  },
  "include": ["**/*.ts", "*.ts"],
  "exclude": ["node_modules"]
}
